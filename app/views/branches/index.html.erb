<!DOCTYPE html>
<html>
<head>
  <title>List of Branches</title>
</head>
<%= button_to 'back' , admin_path , method: :get %>
<div class="name">
<h1 style="font-size:30px; text-align:center;color:white;"></h1>
</div>
<div align="center">
<br />
<br />
<table width="50%" style="font-size:20px;" cellspacing="20">
  <tr style="font-size:20px; text-align:center; color:LightCoral ">
    <th>ID</th>
    <th>Name</th>
    <th></th>
    <th></th>
  </tr>
<br />
<br />
<% @branches.each do |branch| %>
  <tr style="font-size:20px; text-align:center; color:PaleVioletRed">
    <td style="font-size:16px"><%= branch.id %></td>
    <td style="font-size:16px"><%= branch.name %></td>
    <td><%= link_to 'Edit', edit_branch_path(branch) %></td>
    <td><%= link_to 'Destroy', branch, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
<br /><br />
<div align="center">
<%= button_to 'New Branch', new_branch_path , method: :get %>
</div>
</div>
</html>
